<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edit_nom_restau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/edit_num_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:hint="Numéro"/>

        <Spinner
            android:id="@+id/edit_type_voie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="50">

        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/edit_label_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:hint="Le Libellé"/>

        <EditText
            android:id="@+id/edit_code_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:hint="Le Code Postal"/>
    </LinearLayout>

    <EditText
        android:id="@+id/edit_email_restau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="elephant@gmail.com"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/edit_tel_restau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="+334 77 55 69 25"/>

</LinearLayout>