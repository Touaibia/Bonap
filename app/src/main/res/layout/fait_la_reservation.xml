<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="90dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="1dp"
            android:background="#fff"
            android:gravity="center"
            android:text="Fait votre reservation"
            android:textSize="30dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="1dp">

            <TextView
                android:id="@+id/ReserveNbpersonne"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="80"
                android:background="#fff"
                android:clickable="true"
                android:drawableRight="@android:drawable/ic_input_add"
                android:ems="10"

                android:gravity="start|center"
                android:onClick="onClick"
                android:text="Nombre de personnes: 0"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="62dp"
                tools:layout_editor_absoluteY="34dp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:layout_weight="10"
                android:color="#da0909"
                android:gravity="center"
                android:text="-"
                android:textSize="40dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/ReservDate"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="1dp"
            android:background="#fff"
            android:clickable="true"
            android:drawableRight="@drawable/icons8calendrier26"
            android:ems="10"
            android:gravity="start|center"
            android:onClick="onClick"
            android:text="Selectionnez une date"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="62dp"
            tools:layout_editor_absoluteY="34dp" />

        <TextView
            android:id="@+id/ReservtimeDate"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="1dp"
            android:background="#fff"
            android:clickable="true"
            android:drawableRight="@drawable/icons8heuressupplementaires26"
            android:ems="10"
            android:gravity="start|center"
            android:onClick="onClick"
            android:text="Sélectionnez l'heure"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="62dp"
            tools:layout_editor_absoluteY="34dp" />


        <TextView
            android:id="@+id/ReserveValide"
            android:layout_width="100dp"
            android:layout_height="43dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/border_bacgrdcolor_vert"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:text="validé" />


    </LinearLayout>



</android.support.constraint.ConstraintLayout>