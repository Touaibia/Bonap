<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/ReserveRestauNom"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="1dp"
            android:gravity="center"
            android:background="#4b4948"
            android:text="restaurant"
            android:textColor="@color/white"

            android:textSize="30dp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="1dp"
            android:background="#fff"
            android:gravity="center"
            android:text="Fait votre reservation"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="1dp">


            <TextView
                android:id="@+id/ReserveNbpersonne"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="80"
                android:background="#fff"
                android:clickable="true"
                android:ems="10"
                android:gravity="start|center"
                android:onClick="onClick"
                android:text="Nombre de personnes :0"
                android:textSize="20dp"
                 />

            <TextView
                android:id="@+id/pluspersonne"
                android:layout_width="71dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:layout_weight="10"
                android:color="#da0909"
                android:gravity="center"
                android:clickable="true"
                android:onClick="onClick"
                android:text="+"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/moinspersonne"
                android:layout_width="58dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:layout_weight="10"
                android:color="#da0909"
                android:gravity="center"
                android:clickable="true"
                android:onClick="onClick"
                android:text="-"
                android:textSize="40dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/ReservDate"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="1dp"
            android:background="#fff"
            android:clickable="true"
            android:drawableRight="@drawable/icons8calendrier26"
            android:ems="10"
            android:gravity="start|center"
            android:onClick="onClick"
            android:text="Selectionnez une date"
            android:textSize="20dp"
             />

        <TextView
            android:id="@+id/ReservtimeDate"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="1dp"
            android:background="#fff"
            android:clickable="true"
            android:drawableRight="@drawable/icons8heuressupplementaires26"
            android:ems="10"
            android:gravity="start|center"
            android:onClick="onClick"
            android:text="SÃ©lectionnez l'heure"
            android:textSize="20dp"
             />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/ServiceMidi"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="35dp"
                android:textSize="20dp"
                android:text="Midi" />

            <CheckBox
                android:id="@+id/ServiceSoire"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="61dp"
                android:textSize="20dp"
                android:text="Soire" />

        </RelativeLayout>

        <TextView
            android:id="@+id/ReserveValide"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/border_bacgrdcolor_vert"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:text="VALIDE" />




    </LinearLayout>



</android.support.constraint.ConstraintLayout>