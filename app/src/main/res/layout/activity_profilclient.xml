<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bonapp.ujm.myapplication.Controller.profilclient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:weightSum="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/profil"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:weightSum="1">

            <TextView

                android:layout_marginTop="10dp"
                android:id="@+id/information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="Mes Informations"
                android:textAlignment="center"/>
            <TextView

                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nom"
                android:layout_marginStart="15dp"
                />
            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:background="@drawable/roundedwhite"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textSize="14dp"
                android:drawablePadding="5dp"
                android:paddingStart="10dp"
                android:id="@+id/clientPseudoModif"
                android:layout_weight="0.04"/>
            <TextView
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                />
            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:background="@drawable/roundedwhite"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textSize="14dp"
                android:drawablePadding="5dp"
                android:paddingStart="10dp"
                android:id="@+id/clientEmailModif"
                android:layout_weight="0.04"/>
            <TextView
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Telephone"
                />

            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:background="@drawable/roundedwhite"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textSize="14dp"
                android:drawablePadding="5dp"
                android:paddingStart="10dp"
                android:id="@+id/clientTelephoneModif"
                android:layout_weight="0.04"/>
            <TextView
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adress"
                />

            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:background="@drawable/roundedwhite"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textSize="14dp"
                android:drawablePadding="5dp"
                android:paddingStart="10dp"
                android:id="@+id/clientAdressModif"
                android:layout_weight="0.04"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Mettre A Jour"
                android:textStyle="normal"
                android:background="@drawable/registerbutton"
                android:layout_gravity="center"
                android:layout_marginTop="18dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"

                />




        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
