<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:background="#dee1da">


        <EditText
            android:id="@+id/Position"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:drawablePadding="5dp"
            android:hint="position, adresse de depart"
            android:paddingStart="10dp"
            android:textSize="14dp"
            android:textStyle="normal" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:text="Distance"
                android:gravity="left"
                android:id="@+id/textView5"
                android:textSize="18dp"/>

            <Spinner
                android:id="@+id/distance"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:entries="@array/array_distance"
                android:gravity="right"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:text="Budget"
                android:gravity="left"
                android:id="@+id/textView6"
                android:textSize="18dp"/>

            <Spinner
                android:id="@+id/budget"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:entries="@array/array_budget"
                android:gravity="right" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:text="Type"
                android:gravity="left"
                android:id="@+id/textView7"
                android:textSize="18dp"/>

            <Spinner
                android:id="@+id/type"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:entries="@array/array_type"
                android:gravity="right" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:text="Type Ambiance"
                android:gravity="left"
                android:id="@+id/textView8"
                android:textSize="18dp"/>

            <Spinner
                android:id="@+id/typeAmbiance"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:entries="@array/array_typeambiance"
                android:gravity="right" />

        </RelativeLayout>

        <Button
            android:id="@+id/buttonFiltre"
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:background="#6c1220"
            android:text="Valide" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>